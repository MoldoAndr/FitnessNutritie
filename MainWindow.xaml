<Window x:Class="FitnessNutritionClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Nutrition Client" Height="300" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="Sign Up">
                <StackPanel Margin="10">
                    <TextBox Name="SignUpUsername" Margin="0,0,0,10" Text="testuser"/>
                    <PasswordBox Name="SignUpPassword" Margin="0,0,0,10" Password="password123"/>
                    <Button Name="SignUpButton" Content="Sign Up" Click="SignUpButton_Click"/>
                    <TextBlock Name="SignUpResult" Margin="0,10,0,0" Foreground="Red"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Login">
                <StackPanel Margin="10">
                    <TextBox Name="LoginUsername" Margin="0,0,0,10" Text="testuser"/>
                    <PasswordBox Name="LoginPassword" Margin="0,0,0,10" Password="password123"/>
                    <Button Name="LoginButton" Content="Login" Click="LoginButton_Click"/>
                    <TextBlock Name="LoginResult" Margin="0,10,0,0" Foreground="Red"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
